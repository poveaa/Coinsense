<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:backgroundTint="@color/gold_color"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgArriendo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arriendo" />

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="81dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameArriendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arriendo"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edArriendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameArriendo"
                android:layout_marginBottom="1dp"
                android:textSize="14dp"
                android:ems="10"
                android:hint="$"
                android:inputType="number"
                android:textColor="@android:color/black" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/gold_color">

        <ImageView
            android:id="@+id/imgAlimento"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_alimento" />

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_height="81dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameAlimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alimentación"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edAlimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameAlimento"
                android:textColor="@color/black_color"
                android:hint="$"
                android:inputType="number"
                android:textSize="14dp"
                android:ems="12"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/gold_color">

        <ImageView
            android:id="@+id/imgTransporte"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_locomocion" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="81dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameTransporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Transporte"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/edTransporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTransporte"

                android:textColor="@color/black_color"
                android:inputType="number"
                android:textSize="14dp"
                android:hint="$"
                android:ems="12"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/gold_color">

        <ImageView
            android:id="@+id/imgBasicos"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_basicos" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="81dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameBasicos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastos Básicos"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edBasicos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameBasicos"
                android:textColor="@color/black_color"
                android:inputType="number"
                android:textSize="14dp"
                android:hint="$"
                android:ems="12"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/gold_color">

        <ImageView
            android:id="@+id/imgEducacion"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_educacion" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="81dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameEducacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educación"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edEducacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameEducacion"
                android:textColor="@color/black_color"
                android:inputType="number"
                android:textSize="14dp"
                android:hint="$"
                android:ems="12"/>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/gold_color">

        <ImageView
            android:id="@+id/imgDeudas"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_deudas" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="81dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameDeudas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deudas"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edDeudas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameDeudas"
                android:textColor="@color/black_color"
                android:inputType="number"
                android:textSize="14dp"
                android:hint="$"

                android:ems="12"/>



        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/gold_color">

        <ImageView
            android:id="@+id/imgAhorro"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_ahorros" />

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="81dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameAhorro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahorros"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edAhorro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameAhorro"
                android:textColor="@color/black_color"
                android:inputType="number"
                android:textSize="14dp"
                android:hint="$"
                android:ems="12"
                />



        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/presupesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tienes un presupuesto de:"
            android:textSize="20dp"
            android:textColor="@color/gold_color_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_prresu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:ems="12"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"
            android:outlineAmbientShadowColor="@color/gold_color_dark"
            android:outlineSpotShadowColor="@color/gold_color_dark"
            android:shadowColor="@color/gold_color_dark"
            android:textColor="@color/gold_color_dark" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/btn_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="volver"
            android:backgroundTint="@color/gold_color"
            android:textColor="@color/black_color"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="guardar"
            android:layout_marginLeft="5dp"

            android:backgroundTint="@color/gold_color"
            android:textColor="@color/black_color"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>